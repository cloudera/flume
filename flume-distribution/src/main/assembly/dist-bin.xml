<?xml version="1.0" encoding="UTF-8"?>

<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>bin</id>

  <formats>
    <format>dir</format>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>flume-${project.version}</baseDirectory>

  <fileSets>

    <!-- Copy bin directory -->
    <fileSet>
      <outputDirectory>bin</outputDirectory>
      <directory>../bin</directory>
      <includes />
    </fileSet>

    <!-- Copy conf directory -->
    <fileSet>
      <outputDirectory>conf</outputDirectory>
      <directory>../conf</directory>
      <includes />
    </fileSet>

    <!-- Copy contrib directory -->
    <fileSet>
      <outputDirectory>contrib</outputDirectory>
      <directory>../contrib</directory>
      <includes />
    </fileSet>

    <!-- Copy docs directory -->
    <fileSet>
      <outputDirectory>docs</outputDirectory>
      <directory>../flume-docs/target/docs</directory>
      <includes />
    </fileSet>

    <!-- copy the man pages -->
    <fileSet>
      <outputDirectory>docs/man</outputDirectory>
      <directory>../docs/man</directory>
      <includes />
    </fileSet>

    <!-- Copy miscellaneous top level files -->
    <fileSet>
      <directory>../</directory>
      <includes>
        <include>CHANGELOG.html</include>
        <include>DEVNOTES</include>
        <include>LICENSE</include>
        <include>NOTICE</include>
        <include>README</include>
        <include>RELEASENOTES</include>
      </includes>
    </fileSet>

  </fileSets>

  
  <dependencySets>
    <!-- Copy flume-core libs -->
    <dependencySet>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
      <useProjectArtifact>true</useProjectArtifact>
      <includes>
        <include>com.cloudera:flume-core</include>
      </includes>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>
    </dependencySet>

    <!-- Copy flume-config-web -->
    <dependencySet>
      <outputDirectory>webapps</outputDirectory>
      <outputFileNameMapping>flumemaster.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <includes>
        <include>com.cloudera:flume-config-web</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>

    <!-- Copy flume-node-web -->
    <dependencySet>
      <outputDirectory>webapps</outputDirectory>
      <outputFileNameMapping>flumeagent.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <includes>
        <include>com.cloudera:flume-node-web</include>
      </includes>
      <useTransitiveDependencies>false</useTransitiveDependencies>
    </dependencySet>

    
  </dependencySets>

</assembly>
